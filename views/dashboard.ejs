<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head') %>
<body>
    <%- include('includes/header') %>

    <main>
        <% if (posts.length == 0) {%>
        <h4>Hello <%= user.username %>,</h4>

        <h6><i style="color: lightgrey;">No posts available!</i></h6>
      
        <% } else { %> 
            <h4>Hello <%= user.username %>, here are your posts</h4>

            <ul>
                <% posts.forEach(post => { %>
                    <li><a href="/post/<%= post.id %>"><%= post.title %></a>  created on <%= new Date(post.createDate).getMonth() + 1  %>/<%= new Date(post.createDate).getDate() %>/<%= new Date(post.createDate).getFullYear() %></li>
                <% }) %>
            </ul>

        <% } %>

    </main>

    <%- include('includes/footer') %>
</body>
</html>